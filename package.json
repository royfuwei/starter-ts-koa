{
  "name": "starter-ts-koa",
  "version": "0.0.0",
  "description": "A project created by starter-ts-app",
  "scripts": {
    "clean": "npx rimraf ./dist",
    "build": "npm run build:esbuild",
    "dev": "npm run dev:esbuild",
    "dev:esbuild": "NODE_ENV=local npm run clean &&  npx npm-run-all --parallel build:esbuild:watch",
    "dev:rollup": "NODE_ENV=local npm run clean &&  npx npm-run-all --parallel build:rollup:watch",
    "dev:tsc": "NODE_ENV=local npm run clean &&  npm run build:tsc:watch -- --onSuccess \"npm start\"",
    "start": "node dist/main.js",
    "start:watch1": "npx nodemon dist/main.js",
    "start:watch": "npx nodemon --ext js --exec \"node dist/main.js\"",
    "start:tsc": "npx npm-run-all --parallel build:tsc start",
    "build:esbuild": "npm run clean && node esbuild.build.mjs",
    "build:esbuild:watch": "npm run clean && node esbuild.dev.mjs",
    "build:rollup": "npm run clean && rollup -c",
    "build:rollup:watch": "npm run clean && rollup -c -w",
    "build:tsc": "npm run clean && npx tsc -p tsconfig.build.json",
    "build:tsc:watch": "npm run clean && npx tsc-watch -p tsconfig.app.json",
    "lint-staged": "npx lint-staged",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:web": "jest && npx http-server ./test-results/jest",
    "test:cov": "jest --verbose --coverage",
    "test:cov:web": "npm run test:cov && npx http-server ./coverage/lcov-report",
    "test:e2e": "jest --config jest.config.e2e.ts --passWithNoTests",
    "test:e2e:watch": "jest --config jest.config.e2e.ts --watch",
    "test:e2e:web": "npm run test:e2e && npx http-server ./test-results/jest-e2e",
    "test:e2e:cov": "jest --config jest.config.e2e.ts --verbose --coverage",
    "release": "SKIP_PREPARE_COMMIT=true npx standard-version",
    "release:patch": "SKIP_PREPARE_COMMIT=true npx standard-version --release-as patch",
    "release:minor": "SKIP_PREPARE_COMMIT=true npx standard-version --release-as minor",
    "release:major": "SKIP_PREPARE_COMMIT=true npx standard-version --release-as major",
    "prepare": "npx husky"
  },
  "_moduleAliases": {
    "@": "./dist"
  },
  "lint-staged": {
    "*.ts": [
      "npx prettier --write",
      "npx eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "keywords": [],
  "author": "royfuwei",
  "license": "ISC",
  "packageManager": "pnpm@10.0.0+sha512.b8fef5494bd3fe4cbd4edabd0745df2ee5be3e4b0b8b08fa643aa3e4c6702ccc0f00d68fa8a8c9858a735a0032485a44990ed2810526c875e416f001b17df12b",
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@commitlint/cz-commitlint": "^19.6.1",
    "@eslint/js": "^9.20.0",
    "@koa/cors": "^5.0.0",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/dotenv-flow": "^3.3.3",
    "@types/jest": "^29.5.14",
    "@types/koa": "^2.15.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa__cors": "^5.0.0",
    "@types/supertest": "^6.0.2",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.25.2",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "fast-glob": "^3.3.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-html-reporter": "^4.0.1",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.1",
    "rollup": "^4.42.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0"
  },
  "dependencies": {
    "@koa/bodyparser": "^6.0.0",
    "@koa/multer": "^4.0.0",
    "@koa/router": "^13.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "class-validator-jsonschema": "^5.0.2",
    "cors": "^2.8.5",
    "dotenv-flow": "^4.1.0",
    "koa": "^3.0.0",
    "koa2-swagger-ui": "^5.11.0",
    "module-alias": "^2.2.3",
    "multer": "^2.0.1",
    "openapi3-ts": "3.2.0",
    "reflect-metadata": "^0.2.2",
    "routing-controllers": "^0.11.2",
    "routing-controllers-openapi": "^5.0.0",
    "tslib": "^2.8.1",
    "tsyringe": "^4.10.0"
  }
}